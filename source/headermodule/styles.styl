// header styles
#header
    background-color cd-black
    width 100%
    height 100px


// menu styles
menu-to-banner-gap = 20px
burger-size = 20px
minimal-menu-width = 750px
inner-menu-width = 750px

/*==========================================================
Menu
==========================================================*/
#menu-row
    position fixed
    top 0
    background-color cd-black
    width 100%
    z-index 200

#menu
    color cd-pink
    width 100%
    box-sizing: border-box
    display: flex
    justify-content: space-between
    margin auto
    max-width: inner-menu-width
    padding-left: mobile-side-padding
    padding-right: mobile-side-padding

    #burger
        display: none
        width: burger-size
        height: burger-size
        fill: cd-pink
    .menu-link
        text-transform: uppercase
        font-size: 12pt
        letter-spacing: 0.9pt
        padding 15px
    
    .current-section
        background-color: alpha(white, 0.2)
        // text-decoration: underline


@media screen and (max-width: minimal-menu-width)
    #menu
        flex-direction: column
        .menu-link
            padding: 10px
            text-align: center
    #menu.collapsed
        padding 15px
        .menu-link
            display: none
        #burger
            display inline-block
            text-align center
            margin auto

paddingless-menu-width = (menu-width + (2 * mobile-side-padding))
@media screen and (min-width: paddingless-menu-width)
    #menu
        padding-left: 0
        padding-right: 0

